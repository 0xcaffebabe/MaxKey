		<constructor-arg ref="jdbcTemplate"/>
	</bean>
	
		
	<!-- Authentication providers -->
    <bean id="authenticationProvider" class="org.maxkey.authn.RealmAuthenticationProvider" >
    </bean>
   
	<mvc:annotation-driven />

	<mvc:default-servlet-handler />

</beans>